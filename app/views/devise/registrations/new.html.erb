<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
       <%= f.label :name %><br>
       <%= f.text_field :name, size: 50, :autofocus => true %>
     </div>

   <div class="form-group">

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div>
   </div>

   <div class="form-group">
	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>
   </div>

   <div class="form-group">
	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></div>
   </div>

   <div class="form-group">
    <div><%= f.label :user_continentname, 'Continent' %><br />
    <%= f.select :user_continentname, ['America', 'Asia', 'Africa', 'Europe', 'Australia', 'Antarctica'] %></div>
   </div>

   <div class="form-group">
    <div><%= f.label :user_countryname, 'Country' %><br />
    <%= f.text_field :user_countryname %></div>
   </div>

   <div class="form-group">
    <div><%= f.label :user_city, 'City' %><br />
    <%= f.text_field :user_city %></div>
   </div>

   <div class="form-group">
    <div><%= f.label :user_interest, 'Interest' %><br />
    <%= f.text_field :user_interest, class: "form-control" %></div>
   </div>

      <div class="form-group">
    <div><%= f.label :countries_to_see, 'Countries interested in' %><br />
    <%= f.text_field :countries_to_see, class: "form-control" %></div>
   </div>

  <div>
    <small class="x-small">By signing up, I accept A_Small_World's <%= link_to 'Terms of Use', termsofservice_path, target: '_blank' %>and<%= link_to 'Privacy Policy', privacypolicy_path, target: '_blank' %>.</small>
  </div>

  <div><%= f.submit "Sign up" %></div>

<% end %>

