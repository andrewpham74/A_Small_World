<h1>User Profile</h1>

<!-- Single button -->
<%= link_to "Pins I'm interested in", login_path, class: 'btn btn-primary', style: 'width: 175px' %>

<%= link_to "My pins", my_pins_path, class: 'btn btn-success', style: 'width: 175px' %>

<h2>Pins I'm interested in</h2>

<div class="pins transitions-enabled">
  <% @country_and_interest_pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
         <div class="panel-body">
         <p><%= pin.description %></p>
         <p><%= pin.continent %></p>
         <p><%= pin.country %></p>
         <p><%= pin.interest %></p>
            
            <p><strong><%= pin.user.name if pin.user %></strong></p>
            
            <% if pin.user == current_user or current_user.try(:admin?) %>
              <div class="actions">
                  <%= link_to edit_pin_path(pin) do %>
                   <span class="glyphicon glyphicon-edit"></span>
                   Edit
                   <% end %>
                   <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?'} do %>
                    <span class="glyphicon glyphicon-trash"></span>
                   Delete
                   <% end %>
              </div>
            <% end %>
         
         </div>
      </div>
  <% end %>
</div>
<div class=center>
<%= will_paginate @country_and_interest_pins, renderer: BootstrapPagination::Rails %>
</div>